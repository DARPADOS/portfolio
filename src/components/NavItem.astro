---

export interface Props {
  id: string,
	link: string,
  label: string
}

const {id, link, label} = Astro.props
---
<li>
  <a id={id} href={link}>
    {label}
  </a>
</li>

<style>
  li {
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  a {
    padding: 0.4rem 0.9rem;
    border-radius: 5px;
    height: max-content;
    font-size: 1.2rem;
    color: var(--text-color);
    font-weight: 600;
    text-decoration: none;  
    
  }
  a:hover {
    background-color: var(--nav-item-hover);
  }
  
</style>
