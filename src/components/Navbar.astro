---
import { LanguageSelector } from "astro-i18next/components";
import { localizePath } from "astro-i18next";
import { t } from "i18next";
import Logo from "./Logo.astro";
import NavItem from "./NavItem.astro";
import { ThemeSwitch } from "astro-color-scheme";

const links = [
  {
    id: "home",
    link: localizePath("/#"),
    label: t("nav.home.label")
  },
  {
    id: "projects-anchor",
    link: localizePath(`/#${t("nav.projects.link")}`),
    label: t("nav.projects.label")
  },
  {
    id: "contact",
    link: localizePath(`/#${t("nav.contact.link")}`),
    label: t("nav.contact.label")
  },
]
---

<nav class="navbar">
  <a href={localizePath("/")} id="logo">
    <Logo/>
  </a>
  <ul class="pages">
    {links.map( el => <NavItem id={el.id} label={el.label} link={el.link}/>)}
  </ul>
  <div class="switches-wrap">
    <ThemeSwitch defaultTheme={"system"} strategy={"button"}>
      <button class="theme-button" type="button">
        <p class="sun">ðŸŒž</p>
        <p class="moon">ðŸŒ›</p> 
      </button>
    </ThemeSwitch>
    <LanguageSelector showFlag={false} class="languages" title={t("nav.select.languages.title")} />
  </div>
</nav>


<style>

  .pages {
    list-style: none;
    display: none;
    gap: 15px;
  }
  
  .switches-wrap {
    display: flex;
    align-content: end;
    gap: 9px;
    flex-wrap: wrap;
    flex-direction: row;
  }

  .switches-wrap p {
    font-size: 1.5rem;
  }
  .theme-button {
    padding: 5px;
    border: none;
    border-radius: 100%;
    cursor: pointer;
  }
  .theme-button > .sun{
    display: var(--light-display);
  }
  .theme-button > .moon{
    display: var(--dark-display);
  }
  .navbar {
    position: fixed;
    width: 100vw;
    min-height: 5rem;
    display: flex;
    justify-content: space-between ;
    padding: 1rem;
    align-content: center;
    height: 8vh;
    backdrop-filter: blur(20px);
    box-shadow: rgba(17, 17, 26, 0.1) 0px 4px 16px, rgba(17, 17, 26, 0.05) 0px 8px 32px;
  }

  .languages {
    /*box-shadow: rgba(17, 12, 46, 0.15) 0px 48px 100px 0px;*/
    font-weight: 600;
    border: 1px solid #dadada;
    appearance: none;
    background-color: var(--background-color);
    border-radius: 5px;
    padding: 0.4em 0.6em; 
    font-family: system-ui, sans-serif;
    font-size: var(--font-size-base);
    height: fit-content;  
    align-self: center;
    cursor: pointer;
  }

  @media (min-width: 600px) {
		.pages {
			display: flex;
		}
    .navbar {
      justify-content: space-evenly;
    }
	}
</style>
